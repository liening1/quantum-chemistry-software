/* visualization.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.page-header {
  padding: 20rpx;
  background-color: #4CAF50;
}

.page-title {
  font-size: 36rpx;
  color: white;
  text-align: center;
  font-weight: bold;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}

.molecule-info {
  padding: 20rpx;
  background-color: white;
  border-bottom: 1px solid #eaeaea;
}

.molecule-name {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
}

.molecule-formula {
  font-size: 28rpx;
  color: #666;
}

web-view {
  flex: 1;
  width: 100%;
  border: 1px solid #ccc;
}

.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.controls {
  padding: 20rpx;
  background-color: white;
  border-top: 1rpx solid #eaeaea;
}

.frame-info {
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.button-row {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.control-button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
  padding: 15rpx 0;
  border-radius: 8rpx;
  background-color: #f0f0f0;
  color: #333;
  border: none;
}

.control-button.primary {
  background-color: #4CAF50;
  color: white;
}

.molecule-picker {
  padding: 20rpx;
  background-color: white;
  border-top: 1rpx solid #eaeaea;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.molecule-list {
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.molecule-item {
  display: inline-block;
  width: 150rpx;
  margin-right: 20rpx;
  text-align: center;
  padding: 10rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

.molecule-item.selected {
  background-color: #e0f2e0;
  border: 2rpx solid #4CAF50;
}

.molecule-thumbnail {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.molecule-item-name {
  font-size: 24rpx;
  color: #333;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
